<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar receitas</title>
</head>
<body>
    <h1 class="my-4"> Editar Receita</h1>

    <!-- Forms para edição das receitas -->

    <form action="/editar/<%=receita._id%>" method="post">
        <div class="form-group">
            <input type="text" name="nome" class="form-control" value="<%= receita.nome %>" required>
        </div>

        <div class="form-group">
            <textarea name="ingredientes" class="form-control" required>
                <%= receita.ingredientes.join(',') %>
            </textarea>
        </div>

        <div class="form-group">
            <textarea name="instrucoes" class="form-control" required>
                <%= receita.instrucoes %>
            </textarea>
        </div>

        <button type="submit" class="btn btn-primary">
            Salvar Alterações
        </button>

        <a href="/" class="btn btn-primary">
            Cancelar
        </a>
    </form>
</body>
</html>l